<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trab.paginas.excluir">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Orange" Padding="30">
            <Label Text="Exclusão de Clientes da Academia" FontFamily="Times new roman" HorizontalOptions="CenterAndExpand"
                FontSize="Large"
                TextColor="DarkBlue"/>
            <Label Text="Digite o CPF:" FontSize="Medium"
                TextColor="Blue"/>
            <Entry x:Name="txt_cpf"/>
            <Button Text="Excluir" x:Name="btn_excluir" FontSize="Medium"
                TextColor="Red" CornerRadius="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>